---
import Carousel from "./Carousel.astro";
const { images } = Astro.props;
---

{
  Array.isArray(images) ? (
    // <Carousel images={images} />
    <section class="post__media-swiper swiper">
      <div class="swiper-wrapper">
        {images.map((image) => (
          <img class="post__media swiper-slide" src={image.path} alt={image.alt} loading="lazy" />
        ))}
      </div>
      <div class="swiper-pagination" />
    </section>
  ) : (
    <img class="post__media-image" src={images.path} alt={images.alt} loading="lazy" />
  )
}
